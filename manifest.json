{
  "manifest_version": 2,
  "name": "Text Highlighter",
  "version": "1.0",
  "description": "A Microsoft Edge extension that allows you to highlight text on a webpage.",

  "permissions": [
    "contextMenus",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
